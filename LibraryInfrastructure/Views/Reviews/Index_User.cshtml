@model IEnumerable<LibraryDomain.Model.Review>

@{
    ViewData["Title"] = "Коментарі";
}

<h1 class="mb-4">Коментарі @ViewBag.Name</h1>

<div lass="d-flex flex-column gap-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="badge bg-warning text-dark">★ @item.Rate</span>
                    </h5>
                    <p class="card-text">
                        @item.Text
                    </p>
                    <p class="text-muted mb-0">
                        <i class="bi bi-person-circle me-1"></i>
                        @item.User.FirstName @item.User.LastName
                    </p>
                </div>
            </div>
        </div>
        <br />
    }
</div>
