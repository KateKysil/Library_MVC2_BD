<h1>Видавці</h1>

<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">@item.PublisherName</h5>
                <small class="text-muted">@item.Country</small>
            </div>
            <div>
                
                <a asp-action="Details_User" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Details">
                    <i class="bi bi-info-circle"></i>
                </a>
                
            </div>
        </div>
    }
</div>
<br/>
<br />
<a class="btn btn-primary mb-3" type="=submit" asp-area="" asp-controller="Publishers" asp-action="Import">Завантажити з файлу</a>
<a class="btn btn-primary mb-3" type="=submit" asp-area="" asp-controller="Publishers" asp-action="Export">Експортувати у excel файл</a>
<a class="btn btn-primary mb-3" type="=submit" asp-area="" asp-controller="Publishers" asp-action="ExportDocx">Експортувати у .docx файл</a>